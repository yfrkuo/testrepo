<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:Settings/>
    </Window.DataContext>
    <Grid>
        <Image HorizontalAlignment="Left" Height="100" Margin="333,104,0,0" Source="{Binding Url}" VerticalAlignment="Top" Width="100" MouseDown="aPicture_MouseDown"/>
        <Label Content="{Binding Counter}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="366,217,0,0" Height="32" Width="34"/>
    </Grid>
</Window>
